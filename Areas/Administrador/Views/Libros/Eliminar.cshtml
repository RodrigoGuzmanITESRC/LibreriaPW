@model LibreriaPW.Models.Libro
@{
    Layout = "LayoutAdmin";
}

<form method="post" action="~/administrador/Libros/Eliminar">
    <div>
        <h1>Eliminar libro</h1>

        <input type="hidden" id="id" asp-for="Id" />

        <p>¿Está seguro de eliminar el libro  "<span>@(Model.Titulo)</span>"?</p>

        <div class="botones">
            <p id="error">
                @Html.ValidationSummary()
            </p>
            <input type="submit" value="Si" id="btnSi" />
            <a href="~/administrador/Libros"><input type="button" value="No" id="btnNo" formnovalidate="formnovalidate" /></a>
        </div>
    </div>
</form>