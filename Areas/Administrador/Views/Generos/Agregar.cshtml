@model LibreriaPW.Models.Genero
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "LayoutAdmin";
}

<form method="post" action="~/Administrador/Generos/Agregar">
    <div>
        <h1>Agregar genero</h1>

        <label>Nombre:</label>
        <input asp-for="Nombre" type="text" id="txtNombre" required="required" />
       


        <div class="botones">
            <p id="error">
                @Html.ValidationSummary()
            </p>
            <input type="submit" value="Agregar" id="btnAgregar" />
            <a href="~/Administrador/Generos"><input type="button" value="Cancelar" id="btnCancelar" formnovalidate="formnovalidate" /></a>
        </div>
    </div>
</form>