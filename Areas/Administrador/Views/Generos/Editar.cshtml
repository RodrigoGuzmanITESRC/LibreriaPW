@model LibreriaPW.Models.Genero
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "LayoutAdmin";
}

<form method="post" action="~/Administrador/Generos/Editar">
    <div>
        <h1>Editar Genero</h1>

        <input type="hidden" id="id" asp-for="Id"/>

        <label>Nombre:</label>
        <input type="text" id="txtNombre" required="required" asp-for="Nombre"/>
      

        <div class="botones">
            <p id="error"> @Html.ValidationSummary() </p>
            <input type="submit" value="Guardar" id="btnGuardar" />
            <a href="~/Administrador/Generos"><input type="button" value="Cancelar" id="btnNo" formnovalidate="formnovalidate" /></a>
        </div>
    </div>
</form>