@model LibreriaPW.Models.Genero
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "LayoutAdmin";
}

<form method="post" action="~/administrador/generos/eliminar">
    <div>
        <h1>Eliminar Genero</h1>

        <input type="hidden" id="id" asp-for="Id"/>
        

        <p>¿Está seguro de eliminar el genero "<span id="nombreGenero">@Model.Nombre</span>"?</p>

        <div class="botones">
            <p id="error">
                @Html.ValidationSummary()
            </p>
            <input type="submit" value="Si" id="btnSi"/>
            <a href="~/administrador/generos"><input type="button" value="No" id="btnNo" formnovalidate="formnovalidate" /></a>
        </div>
    </div>
</form>